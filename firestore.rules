
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // USERS
    // Users can read and write to their own profile.
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // APPLICATIONS
    // Users can create their own applications.
    // Users can read their own applications.
    // No one can update or delete applications for now.
    match /applications/{applicationId} {
       allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
       allow read: if request.auth != null && resource.data.userId == request.auth.uid;
       allow update, delete: if false;
    }

    // PROGRESS
    // Users can create their own progress documents.
    // Users can read their own progress.
    // No one can update or delete progress for now.
    match /progress/{progressId} {
       allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
       allow read: if request.auth != null && resource.data.userId == request.auth.uid;
       allow update, delete: if false;
    }

    // PDS COMPLAINTS
    // Users can create their own complaints.
    // Users can read their own complaints.
    match /pdsComplaints/{complaintId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }
    
    // HEALTH APPOINTMENTS
    // Users can create their own appointments.
    // Users can read and update (cancel) their own appointments.
    match /healthAppointments/{appointmentId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if isOwner(resource.data.userId);
      allow update: if isOwner(resource.data.userId) && request.resource.data.status == 'Cancelled';
      allow delete: if false;
    }
  }
}
