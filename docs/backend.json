
{
  "entities": {
    "Service": {
      "title": "Service",
      "description": "Represents a generic service provided by the platform.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the service."
        },
        "description": {
          "type": "string",
          "description": "A brief description of the service."
        },
        "details": {
          "type": "object",
          "description": "Detailed information about the service."
        },
        "contactInfo": {
          "type": "object",
          "description": "Contact information for the service."
        },
        "actionType": {
          "type": "string",
          "enum": [
            "form",
            "link",
            "info"
          ],
          "description": "The type of action associated with the service."
        },
        "status": {
          "type": "string",
          "enum": [
            "active",
            "inactive"
          ],
          "description": "The current status of the service."
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the service was last updated."
        },
        "schoolName": {
            "type": "string"
        },
        "address": {
            "type": "string"
        },
        "phone": {
            "type": "string"
        },
        "email": {
            "type": "string"
        },
        "principalName": {
            "type": "string"
        },
        "admissionCriteria": {
            "type": "string"
        },
        "academicCalendar": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "event": { "type": "string" },
                    "date": { "type": "string" }
                }
            }
        },
        "upcomingEvents": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "event": { "type": "string" },
                    "date": { "type": "string" }
                }
            }
        }
      },
      "required": [
        "title",
        "description",
        "actionType",
        "status"
      ]
    },
    "ServiceRequest": {
      "title": "Service Request",
      "description": "Represents a user's request for a specific service.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "serviceId": {
          "type": "string"
        },
        "requestDate": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": [
            "Pending",
            "Approved",
            "Rejected"
          ]
        },
        "formData": {
          "type": "object"
        }
      },
      "required": [
        "userId",
        "serviceId",
        "requestDate",
        "status"
      ]
    },
    "LiteracyRegistration": {
      "title": "Literacy Registration",
      "description": "Represents a user's enrollment in the adult literacy program.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "registrationDate": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": [
            "Active",
            "Completed"
          ]
        }
      },
      "required": [
        "userId",
        "registrationDate",
        "status"
      ]
    },
    "CourseEnrollment": {
      "title": "Course Enrollment",
      "description": "Represents a user's enrollment in a digital course.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "courseId": {
          "type": "string"
        },
        "enrollmentDate": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "userId",
        "courseId",
        "enrollmentDate"
      ]
    },
    "HealthAppointment": {
      "title": "Health Appointment",
      "description": "Represents a booking for a Primary Health Centre appointment.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "appointmentDate": {
          "type": "string",
          "format": "date-time"
        },
        "reason": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "Scheduled",
            "Completed",
            "Cancelled"
          ]
        }
      },
      "required": [
        "userId",
        "appointmentDate",
        "status"
      ]
    },
    "TelemedicineBooking": {
      "title": "Telemedicine Booking",
      "description": "Represents a booking for a remote consultation.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "bookingDate": {
          "type": "string",
          "format": "date-time"
        },
        "consultationDate": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": [
            "Scheduled",
            "Completed",
            "Cancelled"
          ]
        }
      },
      "required": [
        "userId",
        "bookingDate",
        "consultationDate",
        "status"
      ]
    },
    "PDSComplaint": {
      "title": "PDS Complaint",
      "description": "Represents a complaint related to the Public Distribution System.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "complaintDate": {
          "type": "string",
          "format": "date-time"
        },
        "description": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "Open",
            "Resolved",
            "Closed"
          ]
        }
      },
      "required": [
        "userId",
        "complaintDate",
        "description",
        "status"
      ]
    },
    "MobileUnitAlert": {
      "title": "Mobile Unit Alert",
      "description": "Represents a user's subscription to mobile medical unit alerts.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "subscriptionDate": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "userId",
        "subscriptionDate"
      ]
    },
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "village": {
          "type": "string",
          "description": "The village where the user resides."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user profile was created."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user profile was last updated."
        }
      },
      "required": [
        "uid",
        "email"
      ]
    },
    "Application": {
      "title": "Application",
      "description": "Represents a user's application for a government scheme.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user who submitted the application."
        },
        "schemeName": {
          "type": "string",
          "description": "The name of the scheme the application is for."
        },
        "submissionDate": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time the application was submitted."
        },
        "status": {
          "type": "string",
          "enum": [
            "Pending",
            "Approved",
            "Rejected"
          ],
          "description": "The current status of the application."
        }
      },
      "required": [
        "userId",
        "schemeName",
        "submissionDate",
        "status"
      ]
    },
    "Progress": {
      "title": "Progress",
      "description": "Represents a user's progress in a course.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user."
        },
        "course": {
          "type": "string",
          "description": "The name of the course."
        },
        "score": {
          "type": "number",
          "description": "The user's score in the course quiz."
        },
        "completedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the course was completed."
        }
      },
      "required": [
        "userId",
        "course",
        "score",
        "completedAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public profile information for each user."
    },
    "/applications/{applicationId}": {
      "schema": {
        "$ref": "#/entities/Application"
      },
      "description": "Stores all submitted applications for various schemes."
    },
    "/progress/{progressId}": {
      "schema": {
        "$ref": "#/entities/Progress"
      },
      "description": "Stores user progress for courses."
    },
    "/educationServices/{serviceId}": {
      "schema": {
        "$ref": "#/entities/Service"
      },
      "description": "Stores details for education services. The document ID 'local-school' contains details for the local school."
    },
    "/governmentServices/{serviceId}": {
      "schema": {
        "$ref": "#/entities/Service"
      },
      "description": "Stores details for government services."
    },
    "/healthcareServices/{serviceId}": {
      "schema": {
        "$ref": "#/entities/Service"
      },
      "description": "Stores details for healthcare services."
    },
    "/serviceRequests/{requestId}": {
      "schema": {
        "$ref": "#/entities/ServiceRequest"
      },
      "description": "Stores all service requests from users."
    },
    "/literacyRegistrations/{registrationId}": {
      "schema": {
        "$ref": "#/entities/LiteracyRegistration"
      },
      "description": "Stores enrollments for the adult literacy program."
    },
    "/courseEnrollments/{enrollmentId}": {
      "schema": {
        "$ref": "#/entities/CourseEnrollment"
      },
      "description": "Stores enrollments for digital skills courses."
    },
    "/healthAppointments/{appointmentId}": {
      "schema": {
        "$ref": "#/entities/HealthAppointment"
      },
      "description": "Stores bookings for Primary Health Centre appointments."
    },
    "/telemedicineBookings/{bookingId}": {
      "schema": {
        "$ref": "#/entities/TelemedicineBooking"
      },
      "description": "Stores bookings for remote telemedicine consultations."
    },
    "/pdsComplaints/{complaintId}": {
      "schema": {
        "$ref": "#/entities/PDSComplaint"
      },
      "description": "Stores user complaints related to the Public Distribution System."
    },
    "/mobileUnitAlerts/{alertId}": {
      "schema": {
        "$ref": "#/entities/MobileUnitAlert"
      },
      "description": "Stores user subscriptions for mobile medical unit notifications."
    }
  }
}

    